<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/drawerlayout_ad"
    android:background="@drawable/gradient"

    >

<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context="com.example.sweekritee.notifyme.Admin_Homepage"
    android:orientation="vertical"
    android:background="@drawable/gradient">

    <include
        android:id="@+id/toolbar_ad"
        layout="@layout/toolbarad_layout"
        android:visibility="visible"

       />



    <Button
        android:id="@+id/addevent_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="92dp"
        android:text="@string/addevent"
        android:background="@drawable/button_style"/>

    <Button
        android:id="@+id/addroutine_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginTop="42dp"
        android:text="@string/addroutine"
        android:background="@drawable/button_style"/>

    <Button
        android:id="@+id/addsyllabus_btn"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginTop="41dp"
        android:text="@string/addsyllabus"
        android:background="@drawable/button_style"/>


</LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_ad"
        app:headerLayout="@layout/nav_header_ad"
        app:menu="@menu/navigation_menu_std"
        android:layout_gravity="start"
        >

    </android.support.design.widget.NavigationView>




</android.support.v4.widget.DrawerLayout>


